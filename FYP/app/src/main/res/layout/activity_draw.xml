<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ToggleButton
        android:id="@+id/btn_user_help"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="12dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/btn"
        android:textOn=""
        android:textOff=""/>

    <Button
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:clickable="false"
        android:layout_width="125dp"
        android:background="@drawable/dialog"
        android:layout_height="58dp"
        android:id="@+id/txt_user_help"
        android:layout_below="@id/btn_user_help"/>

    <Button
        android:background="@drawable/btn_save"
        android:id="@+id/btn_save_draw"
        android:layout_width="53dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_seek">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    </RelativeLayout>


    <com.example.jekan.fyp_test.view.Dot
        android:id="@+id/dot"
        android:tag="trueDot"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.example.jekan.fyp_test.view.Dot>

    <LinearLayout
        android:id="@+id/layout_seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#cccccc">

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:min="10"
            android:max="100"
            android:progress="8"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>